<h2>Shopping Cart</h2>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Price</th>
        <th>Action</th>
    </tr>
    {% for key, product in cart %}
        <tr>
            <td>{{ product.title }}</td>
            <td>{{ product.description }}</td>
            <td>${{ product.price }}</td>
            <td><a href="{{ path('remove_from_cart', {'index': key}) }}">Remove</a></td>
        </tr>
    {% endfor %}
</table>
<p>Total: ${{ totalPrice|number_format(2) }}</p>


